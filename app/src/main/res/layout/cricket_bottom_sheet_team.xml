<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/rr1"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@color/blackshade">
        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="17dp"
            android:layout_margin="20dp"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rr2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/blackshade"
        android:layout_below="@id/rr1">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Player"
                android:textColor="@color/deselection_color"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginStart="20dp"/>
            <TextView
                android:id="@+id/total_player"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11/11"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="17dp"
                android:layout_marginStart="20dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="3dp"
                app:cardBackgroundColor="@color/navyblue">
                <TextView
                    android:id="@+id/team1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="IND"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginVertical="2dp"/>
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="v/s"
                android:textColor="@color/white"
                android:textSize="12dp"
                android:layout_marginHorizontal="10dp"
                android:layout_gravity="center_vertical"/>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="3dp"
                app:cardBackgroundColor="@color/navyblue">
                <TextView
                    android:id="@+id/team2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginVertical="2dp"
                    android:text="AUS"
                    android:textStyle="bold"
                    android:textColor="@color/white"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </RelativeLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rr2"
        android:background="@drawable/cricket_team"/>

    <TextView
        android:id="@+id/role1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="WICKETKEEPER"
        android:textColor="@color/white"
        android:textSize="10dp"
        android:layout_below="@id/rr2"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/wkrecycler"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:layout_below="@id/role1"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/role2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="BATSMAN"
        android:textColor="@color/white"
        android:textSize="10dp"
        android:layout_below="@id/wkrecycler"
        android:layout_marginTop="65dp"
        android:layout_marginBottom="10dp"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/batrecycler"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:layout_below="@id/role2"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/role3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="AR-ROUNDER"
        android:textColor="@color/white"
        android:textSize="10dp"
        android:layout_below="@id/batrecycler"
        android:layout_marginTop="65dp"
        android:layout_marginBottom="10dp"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/arrecycler"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:layout_below="@id/role3"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/role4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/bowlrecycler"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:text="BOWLER"
        android:textColor="@color/white"
        android:textSize="10dp" />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/bowlrecycler"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:layout_above="@id/space"
        android:layout_marginBottom="25dp"
        android:layout_centerHorizontal="true"/>

    <Space
        android:id="@+id/space"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>