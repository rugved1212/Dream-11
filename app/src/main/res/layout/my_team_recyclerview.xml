<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        app:cardBackgroundColor="@color/navyblue"
        app:cardCornerRadius="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/blackshade"
                android:id="@+id/rr">

                <TextView
                    android:id="@+id/teamid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="25dp"
                    android:text="TEAM1"
                    android:textStyle="bold"
                    android:textColor="@color/amber"
                    android:textSize="15dp" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@id/rr"
                android:gravity="center_vertical"
                android:layout_marginStart="15dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginHorizontal="10dp">
                    <TextView
                        android:id="@+id/team1name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="IND"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="17dp"/>
                    <TextView
                        android:id="@+id/team1player_selected"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="8"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="17dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginHorizontal="10dp">
                    <TextView
                        android:id="@+id/team2name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PAK"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="17dp"/>
                    <TextView
                        android:id="@+id/team2player_selected"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="17dp"/>
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/rr"
                android:layout_toEndOf="@id/ll"
                android:gravity="end|center_vertical"
                android:layout_marginEnd="10dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="25dp"
                    android:layout_alignStart="@id/ll1"
                    android:layout_alignTop="@id/ll1">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="C"
                        android:textSize="10dp"
                        android:textStyle="bold"
                        android:gravity="center"/>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="25dp"
                    android:layout_alignStart="@id/ll2"
                    android:layout_alignTop="@id/ll2">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="VC"
                        android:textSize="10dp"
                        android:textStyle="bold"
                        android:gravity="center"/>
                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:id="@+id/ll1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginHorizontal="20dp">
                    <ImageView
                        android:id="@+id/captain_img"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:src="@color/black"/>
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="2dp"
                        app:cardBackgroundColor="@color/white">
                        <TextView
                            android:id="@+id/captain_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="VIRAT KOHLI"
                            android:textSize="10dp"
                            android:ellipsize="end"
                            android:textColor="@color/blackshade"
                            android:textStyle="bold"
                            android:maxLines="1"
                            android:maxLength="10"
                            android:gravity="center"
                            android:layout_margin="2dp"/>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginHorizontal="10dp"
                    android:layout_toEndOf="@id/ll1">
                    <ImageView
                        android:id="@+id/vicecaptain_img"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:src="@color/black"/>
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="2dp"
                        app:cardBackgroundColor="@color/white">
                        <TextView
                            android:id="@+id/vicecaptain_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="VIRAT KOHLI"
                            android:textSize="10dp"
                            android:ellipsize="end"
                            android:textColor="@color/blackshade"
                            android:textStyle="bold"
                            android:maxLines="1"
                            android:maxLength="10"
                            android:gravity="center"
                            android:layout_margin="2dp"/>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>
            </RelativeLayout>


        </RelativeLayout>



    </androidx.cardview.widget.CardView>

</RelativeLayout>